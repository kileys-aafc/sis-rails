<h1>Glossaire des termes de la science des sols</h1>

<div class="row"> 
	<div class="col-md-12"> 
		<ul class="list-inline">
			<%for i in 0..25%>
				<li class="h4"><a href="/<%=params[:rootdir]%>/glossary/<%=@SimpleCharArray[i]%>/index.html"><%=@CapitalCharArray[i]%></a></li>
			<%end%>
		</ul>
	<div>
</div>

<dl>
	<%if @char1 == '_' then%>
		<%for item in @char1_fr do%>
			<dt><%=item.term_fr%></dt>
			<dd><%=raw item.definition_fr%></dd>
		<%end%>
	<%else%>
		<%for item in @char1_all_fr do%>
			<dt><%=item.term_fr%></dt>
			<dd><%=raw item.definition_fr%></dd>
		<%end%>
	<%end%>
</dl>

