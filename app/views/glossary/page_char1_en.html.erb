<% content_for :title do %><%if @char1 == '_' then%>Glossary: Other<%else%>Glossary: <%=@char1%><%end%><%end%>
<% content_for :date do %>2019-09-24<%end%>

<h1>Glossary of Terms in Soil Science</h1>

<div class="row"> 
	<div class="col-md-12"> 
		<ul class="list-inline">
			<%for i in 0..26%>
				<li class="h4"><a href="/<%=params[:rootdir]%>/glossary/<%=@SimpleCharArray[i]%>/index.html"><%=@CapitalCharArray[i]%></a></li>
			<%end%>
		</ul>
	<div>
</div>

<dl>
	<%if @char1 == '_' then%>
		<%for item in @char1_en do%>
			<dt><%=item.term_en%></dt>
			<dd><%=raw item.definition_en%></dd>
		<%end%>
	<%else%>
		<%for item in @char1_all_en do%>
			<dt><%=item.term_en%></dt>
			<dd><%=raw item.definition_en%></dd>
		<%end%>
	<%end%>
</dl>

