<% content_for :title do %>La description de sol pour <%=@nameData.soil_id%><%end%>
<% content_for :date do %>2013-06-26<%end%>

<h1>Description du sol <%=@nameData.soil_id%> (<%=@nameData.soilname%>)</h1>

<section>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-bordered">
				<caption><strong>Caractéristiques générale</strong></caption>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/s_group3.html">Classification</a></th>
					<td><strong><%=@nameData.s_group3%>.<%=@nameData.g_group3%></strong><p><a href="/siscan/taxa/cssc3/<%=@nameData.order3%>/<%=@nameData.g_group3%>/<%=@nameData.s_group3%>/index.html"><%=raw Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/s_group3", :valuegroup=>@nameData.g_group3, :identifier=>@nameData.s_group3}).title_fr%></a></p></td>
				</tr>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/profile.html">Profil</a></th>
					<td><%profile = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/slc/v3.0/component/lu", :identifier=>@nameData.profile})%><strong><%=profile.title_fr%></strong><%= raw profile.abstract_fr%></td>
				</tr>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/kind.html">Type de matériel de surface </a></th>
					<td><%kind = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/kind", :identifier=>@nameData.kind})%><strong><%=kind.title_fr%></strong><%= raw kind.abstract_fr%></td>
				</tr>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/watertbl.html">Caractéristiques de la nappe phréatique</a></th>
					<td><%watertbl = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/watertbl", :identifier=>@nameData.watertbl})%><strong><%=watertbl.title_fr%></strong><%= raw watertbl.abstract_fr%></td>
				</tr>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/rootrestri.html">Couche de sol bloquant le passage aux racines</a></th>
					<td><%rootrestri = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/rootrestri", :identifier=>@nameData.rootrestri})%><strong><%=rootrestri.title_fr%></strong><%= raw rootrestri.abstract_fr%></td>
				</tr>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/restr_type.html">Type de couche bloquant le passage aux racines</a></th>
					<td><%restr_type = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/restr_type", :identifier=>@nameData.restr_type})%><strong><%=restr_type.title_fr%></strong><%= raw restr_type.abstract_fr%></td>
				</tr>
				<tr>
					<th><a href="/siscan/nsdb/soil/v2/snt/drainage.html">Classe de drainage</a></th>
					<td><%drainage = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/drainage", :identifier=>@nameData.drainage})%><strong><%=drainage.title_fr%></strong><%= raw drainage.abstract_fr%></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-bordered">
				<caption><strong>Matériau originel</strong></caption>
				<thead>
					<tr>
					<%if @nameData.mdep2 != "-" then%>
						<th></th>
					<%end%>
						<th scope="col"><a href="/siscan/nsdb/soil/v2/snt/mdep1.html">Mode de dépôt</a></th>
						<th scope="col"><a href="/siscan/nsdb/soil/v2/snt/pmtex1.html">Texture</a></th>
						<th scope="col"><a href="/siscan/nsdb/soil/v2/snt/pmchem1.html">Propriété chimique</a></th>
					</tr>
				</thead>
				<tbody>
					<tr>
					<%if @nameData.mdep2 != "-" then%>
						<th scope="row">le plus élevé</th>
					<%end%>
						<td><%mdep = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/mdep", :identifier=>@nameData.mdep1})%><strong><%=mdep.title_fr%></strong><%=raw mdep.abstract_fr%></td>
						<td><%pmtex = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/pmtex", :identifier=>@nameData.pmtex1})%><strong><%=pmtex.title_fr%></strong><%=raw pmtex.abstract_fr%></td>
						<td><%pmchem = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v2/snt/pmchem", :identifier=>@nameData.pmchem1})%><strong><%=pmchem.title_fr%></strong><%=raw pmchem.abstract_fr%></td>
					</tr>
					<%if @nameData.mdep2 != "-" then%>
					<tr>
					<%if @nameData.mdep3 == "-" then%>
						<th scope="row">au-dessous</th>
					<%else%>
						<th scope="row">intermédiaire</th>
					<%end%>
						<td><%mdep = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/mdep", :identifier=>@nameData.mdep2})%><strong><%=mdep.title_fr%></strong><%=raw mdep.abstract_fr%></td>
						<td><%pmtex = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/pmtex", :identifier=>@nameData.pmtex2})%><strong><%=pmtex.title_fr%></strong><%=raw pmtex.abstract_fr%></td>
						<td><%pmchem = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v2/snt/pmchem", :identifier=>@nameData.pmchem2})%><strong><%=pmchem.title_fr%></strong><%=raw pmchem.abstract_fr%></td>
					</tr>
					<%if @nameData.mdep3 != "-" then%>
					<tr>
						<th scope="row">le plus bas</th>
						<td><%mdep = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/mdep", :identifier=>@nameData.mdep3})%><strong><%=mdep.title_fr%></strong><%=raw mdep.abstract_fr%></td>
						<td><%pmtex = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v1/snt/pmtex", :identifier=>@nameData.pmtex3})%><strong><%=pmtex.title_fr%></strong><%=raw pmtex.abstract_fr%></td>
						<td><%pmchem = Datavalue.find_by({:classesuri=>"http://sis.agr.gc.ca/cansis/nsdb/soil/v2/snt/pmchem", :identifier=>@nameData.pmchem3})%><strong><%=pmchem.title_fr%></strong><%=raw pmchem.abstract_fr%></td>
					</tr>
					<%end%>
				<%end%>
				</tbody>
			</table>
		</div>
	</div>
</section>
