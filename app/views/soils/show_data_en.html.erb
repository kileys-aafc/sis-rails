						<td><%=layer.orgcarb%></td>
						<td><%=layer.vonpost%></td>
						<td><%=layer.wood%></td>
						<td><%=layer.phca%></td>
						<td><%=layer.ph2%></td>
						<td><%=layer.bases%></td>
						<td><%=layer.caco3%></td>
