						<td><%=layer.ksat%></td>
						<td><%=layer.kp0%></td>
						<td><%=layer.kp10%></td>
						<td><%=layer.kp33%></td>
						<td><%=layer.kp1500%></td>
					</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>
</section>
