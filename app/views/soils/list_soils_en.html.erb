<%of_region = Region.find_by_code(params[:province].upcase).possessive_en%>
<% content_for :title do %>Soils <%=of_region%><%end%>
<% content_for :date do %>2019-09-24<%end%>

<h1>Soils <%=of_region%></h1>

<div class="row">
	<div class="col-md-6">
		<table class="wb-tables table table-bordered" data-wb-tables='{ "ordering" : false }'>
			<thead>
				<tr>
					<th scope="col">Soil ID</th>
					<th scope="col">Soil Name</th>
				</tr>
			</thead>
			<tbody>
				<%for soil in @soils do%>
				<tr>
					<td><%=soil.province%> <%=soil.soil_code%> <%=soil.modifier%> <%=soil.profile%> </td>
					<td><a href="<%=soil.soil_code%>/<%=soil.modifier%>/<%=soil.profile%>/description.html"><%=soil.soilname%></td>
				</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>